{
  "name": "teslacam-replay",
  "version": "1.0.0",
  "description": "Browse and replay Tesla dashcam footage with synchronized multi-camera playback",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others -p \"{time} [{index}]\" -t HH:mm:ss \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --env-file=.env --import tsx/esm --watch server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "start": "SERVE_FRONTEND=true node --env-file=.env --import tsx/esm server/index.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "googleapis": "^171.4.0",
    "hls.js": "^1.5.0",
    "hono": "^4.12.1",
    "protobufjs": "^8.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
